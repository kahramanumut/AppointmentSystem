                        <a asp-page="./Login" class="logo"><img width="110 px;" src="~/img/Eru.jpg" alt="logo" class="img-responsive"></a>


                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="icon-data">
