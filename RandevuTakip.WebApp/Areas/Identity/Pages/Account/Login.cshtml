                </label>
            </div>
        </div>*@
                            <button type="submit" class="btn btn-default">Giriş</button>

                        </form>

                        <a asp-page="./Register" class="btn btn-red register" asp-route-returnUrl="@Model.ReturnUrl">Kayıt ol</a>
                        <span class="help">
                            <a asp-page="./ForgotPassword">Şifremi Unuttum ?</a>
                            @*<a href="help.html" class="help-link">¿Help?</a>*@
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
